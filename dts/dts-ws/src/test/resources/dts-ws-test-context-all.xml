<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:jee="http://www.springframework.org/schema/jee" xmlns:core="http://further.utah.edu/schema/core"
    xmlns:dts="http://further.utah.edu/schema/dts"
    xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd
	http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
	http://www.springframework.org/schema/tx
	http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
	http://www.springframework.org/schema/jee
	http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
	http://further.utah.edu/schema/core 
	http://further.utah.edu/schema/core/core.xsd
	http://further.utah.edu/schema/dts 
	http://further.utah.edu/schema/dts/dts.xsd
	">

    <!-- =========================================== -->
    <!-- Resources -->
    <!-- =========================================== -->
    
    <import resource="dts-ws-connection-apelon.xml"/>

    <bean id="dtsObjectFactory"
        class="edu.utah.further.dts.impl.service.DtsObjectFactoryImpl" />

    <bean id="conceptFinderService"
        class="edu.utah.further.dts.impl.service.ConceptFinderService" />

    <bean id="cachingService" class="org.easymock.EasyMock"
        factory-method="createMock">
        <constructor-arg
            value="edu.utah.further.core.util.cache.CachingService" />
    </bean>

<!--     <bean id="connectionFactory" -->
<!--         class="edu.utah.further.dts.impl.service.ConnectionFactoryImpl"> -->
<!--     </bean> -->

    <bean name="dtsOperationService"
        class="edu.utah.further.dts.impl.service.DtsOperationServiceImpl"
        depends-on="dtsObjectFactory,conceptFinderService,cachingService" />

    <bean class="edu.utah.further.dts.impl.util.DtsImplResourceLocator"
        depends-on="connectionFactory">
        <property name="connectionFactory" ref="connectionFactory" />
        <property name="dtsOperationService" ref="dtsOperationService" />
    </bean>

    <bean id="searchServiceRestImpl"
        class="edu.utah.further.dts.ws.impl.service.rest.SearchServiceRestImpl">
    </bean>

    <bean id="dtsSearchService"
        class="edu.utah.further.dts.ws.impl.service.soap.SearchServiceSoapImpl">
    </bean>

    <bean id="dtsSearchServiceRest"
        class="edu.utah.further.dts.ws.impl.service.rest.SearchServiceRestImpl">
    </bean>


</beans>
